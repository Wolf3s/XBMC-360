			<textoffsetx>52</textoffsetx>
			<textoffsety>-2</textoffsety>
			<visible>true</visible>					
		</control>
		
		<control>
			<description>sub menu label background</description>
			<type>image</type>			
			<posx>0</posx>
			<posy>410</posy>
			<width>1280</width>
			<height>50</height>
			<visible>true</visible>		
			<texture>sub_background_label.png</texture>
		</control>	
	
		<control>
			<description>control label</description>
			<type>label</type>			
			<posx>650</posx>
			<posy>415</posy>
			<width>255</width>
			<label>Shutdown</label>
			<font>special13</font>
			<visible>true</visible>
		</control>		
	
