			<onleft>3</onleft>
			<onright>2</onright>
			<onup>1</onup>
			<ondown>1</ondown>
			<texturefocus>sub_info_focus.png</texturefocus>
			<texturenofocus>sub_info_nofocus.png</texturenofocus>
			<textoffsetx>52</textoffsetx>
			<textoffsety>-2</textoffsety>
			<visible>true</visible>					
		</control>		
	
		<control>
			<description>shutdown console button</description>
