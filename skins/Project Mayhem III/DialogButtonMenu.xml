<window id="0">
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
	
		<control>
			<description>sub menu background</description>
			<type>image</type>			
			<posx>0</posx>
			<posy>300</posy>
			<width>1280</width>
			<height>90</height>
			<visible>true</visible>			
			<texture>sub_background.png</texture>
		</control>		

		<control>
			<description>system info button</description>
			<type>button</type>
			<id>1</id>
			<posx>550</posx>
			<posy>305</posy>
			<width>90</width>
			<height>65</height>
			<label>-</label>
			<font>special13</font>
