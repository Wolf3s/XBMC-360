			<id>2</id>
			<posx>640</posx>
			<posy>305</posy>			
			<width>90</width>
			<height>65</height>
			<label>-</label>
			<font>special13</font>
			<onclick>XBMC.Shutdown()</onclick>
			<onleft>1</onleft>
			<onright>3</onright>
			<onup>2</onup>
			<ondown>2</ondown>
			<texturefocus>sub_shutdown_focus.png</texturefocus>
