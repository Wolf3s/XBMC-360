<window id="0">
	<defaultcontrol>1</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
	
		<control>
			<description>background image</description>
			<type>image</type>				
			<posx>-4</posx>
			<posy>0</posy>
			<width>1284</width>
			<height>720</height>
			<texture>background.png</texture>
			<visible>true</visible>			
		</control>
		
		<control>
			<description>header image</description>
			<type>image</type>				
			<posx>-5</posx>
			<posy>-20</posy>
			<width>1288</width>
			<height>155</height>
			<texture>header_videos.png</texture>
			<visible>true</visible>			
		</control>		
		
		<control>
			<description>title</description>
			<type>label</type>			
			<width>255</width>
			<posx>100</posx>
			<posy>50</posy>
			<label>My Videos</label>
			<font>special13</font>
			<visible>true</visible>
		</control>			
		
	    <control>
			<description>video preview window</description>
			<type>videowindow</type>
			<id>0</id>
			<posx>45</posx>
			<posy>430</posy>
			<width>260</width>
			<height>220</height>
			<visible>true</visible>
		</control>	
			
		<control>
			<description>video time label</description>
			<type>label</type>
			<id>0</id>
			<posx>45</posx>
			<posy>660</posy>
			<font>font10</font>
			<label>$INFO[Player.Time] $INFO[Player.Duration,/ ]</label>
			<width>100</width>
			<height>16</height>
			<visible>true</visible> <!-- TODO: implement Player.IsPlaying visible condition -->
		</control>			

		<control>
			<description>Thumbnail Panel</description>
			<type>thumbnailpanel</type>
			<id>10</id>
			<posx>380</posx>
			<posy>160</posy>
			<width>875</width>
			<height>450</height>
			<thumbwidth>120</thumbwidth>
			<thumbheight>120</thumbheight>			
			<texturefocus>folder-focus.png</texturefocus>
			<texturenofocus>folder-nofocus.png</texturenofocus>
			<font>special13</font>			
			<visible>true</visible>					
		</control>

	</controls>
</window>